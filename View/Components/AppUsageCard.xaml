<UserControl x:Class="DigitalWellBeingApp.View.Components.AppUsageCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="60" d:DesignWidth="400">

    <Border BorderBrush="LightGray"
            BorderThickness="1"
            CornerRadius="6"
            Padding="8"
            Margin="4">
        <StackPanel>
            <!-- App name as a button -->
            <Button Content="{Binding ProcessName}"
                    FontWeight="Bold"
                    HorizontalAlignment="Left"
                    Margin="0 0 0 4"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    Foreground="Black"
                    Cursor="Hand"/>

            <!-- Under the button: time usage -->
            <TextBlock Text="{Binding DurationFormatted}"
                       FontSize="13"
                       Foreground="Gray"
                       Margin="4 0 0 0"/>
        </StackPanel>
    </Border>
</UserControl>
