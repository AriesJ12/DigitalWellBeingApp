<UserControl x:Class="DigitalWellBeingApp.View.Components.WeeklyUsageChart"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
             xmlns:vms="clr-namespace:DigitalWellBeingApp.ViewModels"
             mc:Ignorable="d"
             d:DesignHeight="200" d:DesignWidth="400">
    <UserControl.DataContext>
        <vms:WeeklyUsageChartViewModel/>
    </UserControl.DataContext>
    <Grid Margin="10">
        <TextBlock Text="Weekly Usage"
                   FontWeight="Bold"
                   FontSize="16"
                   Margin="0 0 0 10"/>

        <lvc:CartesianChart
            Series="{Binding WeeklySeries}"
            XAxes="{Binding Labels}">
        </lvc:CartesianChart>
    </Grid>
</UserControl>
