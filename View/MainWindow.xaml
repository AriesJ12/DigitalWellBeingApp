<Window x:Class="DigitalWellBeingApp.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:DigitalWellBeingApp.ViewModels"
        xmlns:comp="clr-namespace:DigitalWellBeingApp.View.Components"
        Title="Digital Well-Being"
        Height="450"
        Width="450">
    <Window.DataContext>
        <vm:AppTimeViewModel/>

    </Window.DataContext>
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="App Usage Times"
                       FontSize="20"
                       FontWeight="Bold"
                       Margin="0 0 0 10"/>

            <!-- This will list out all apps from AppUsages -->
            <ItemsControl ItemsSource="{Binding AppUsages}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <comp:AppUsageCard/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>


            <comp:WeeklyUsageChart/>
        </StackPanel>
    </Grid>
</Window>
